@model DEMO_PuellaSchoolAPP.Models.ClassroomModel

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center">Editar registro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ClassroomId" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ClassId" class="form-label">Clase</label>
                <select asp-for="ClassId"
                        asp-items="@ViewBag.Classes"
                        class="form-select">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Estudiante</label>
                <select asp-for="StudentId"
                        asp-items="@ViewBag.Students"
                        class="form-select">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Aceptar</button>
            <a href="@Url.Action("Index", "Classroom")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function confirmAction() {
            if (confirm('¿Está seguro de editar este registro?')) {
                return true;
            } else {
                window.location.href = '@Url.Action("Index", "Classroom")';
                return false;
            }
        }
    </script>
}