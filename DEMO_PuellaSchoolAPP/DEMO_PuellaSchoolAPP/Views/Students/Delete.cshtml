@model DEMO_PuellaSchoolAPP.Models.StudentsModel

@{
    ViewData["Title"] = "Borrar estudiante";
}
<h3>¿Desea eliminar la información de este estudiante?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombres:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentName)
        </dd>
        <dt class = "col-sm-2">
            Apellidos:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentLastName)
        </dd>
        <dt class = "col-sm-2">
            Edad:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentAge)
        </dd>
        <dt class = "col-sm-2">
            Sexo:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentGender)
        </dd>
        <dt class = "col-sm-2">
            Nombre del encargado:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentParentName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input asp-for="StudentId" type="hidden" class="form-control" />
        <div class="col-4 offset-2 row">
            <div class="col">
                <button type="submit" class="btn btn-danger w-100">Borrar</button>
            </div>
            <div class="col">
                <a class="btn btn-info w-100" asp-action="Index">Volver</a>
            </div>
        </div>
    </form>
</div>
