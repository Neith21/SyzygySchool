@model DEMO_PuellaSchoolAPP.Models.SectionModel

@{
    ViewData["Title"] = "Edición de Registro de Sección";
}

<h1 style="text-align:center">Edición de Registro de Sección</h1>

<hr />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit" onsubmit="return confirmAction();">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <input asp-for="SectionId" type="hidden" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="SectionName" class="control-label">Nombre de la Sección</label>
                    <input asp-for="SectionName" class="form-control" />
                    <span asp-validation-for="SectionName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SectionInfo" class="control-label">Información de la Sección</label>
                    <input asp-for="SectionInfo" class="form-control" />
                    <span asp-validation-for="SectionInfo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Regresar al listado</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}