@model DEMO_PuellaSchoolAPP.Models.SubjectModel

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que deseas eliminar esto?</h3>
<div>
    
    <hr />
    <dl class="row">
      
        <dt class="col-sm-2">
            Asignatura
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectName)
        </dd>
        <dt class="col-sm-2">
           Descripcion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectInfo)
        </dd>
        <dt class="col-sm-2">
           Grado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GradeId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Regresar al Listado</a>
    </form>
</div>
