@model DEMO_PuellaSchoolAPP.Models.TeacherModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>quieres eliminar este elemento?</h3>
<div>
    <h4>TeacherModel</h4>
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            Nombre del Maestro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeacherName)
        </dd>
        <dt class = "col-sm-2">
            Apellido
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeacherLastName)
        </dd>
        <dt class = "col-sm-2">
            Edad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeacherAge)
        </dd>
        <dt class = "col-sm-2">
            Sexo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeacherGender)
        </dd>
        <dt class = "col-sm-2">
            Contacto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeacherPhone)
        </dd>
        <dt class = "col-sm-2">
            Correo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeacherEmail)
        </dd>
      
    </dl>
    
    <form asp-action="Delete">
        <input asp-for="TeacherId" class="form-control" type="hidden" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary" >Volver a la lista</a>
    </form>
</div>
